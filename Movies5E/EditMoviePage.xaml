<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies5E.EditMoviePage"
             Title="Editar pelicula">
    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Label Text="Nombre"></Label>
        <Entry x:Name="tituloEntry"></Entry>
        
        <Label Text="Genero"></Label>
        <Picker x:Name="generoPicker" Title="Selecciona un género">
            <Picker.Items>
                <x:String>Acción</x:String>
                <x:String>Aventura</x:String>
                <x:String>Comedia</x:String>
                <x:String>Drama</x:String>
                <x:String>Ciencia Ficción</x:String>
                <x:String>Romance</x:String>
                <x:String>Terror</x:String>
                <x:String>Animación</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Año de lanzamiento"></Label>
        <Entry x:Name="anoEntry" Keyboard="Numeric"></Entry>
        
        <Label Text="Url de la imagen"></Label>
        <Entry x:Name="UrlImagenEntry"></Entry>

        <HorizontalStackLayout Spacing="15">
            <Button Text="Actualizar" Clicked="OnSaveClicked" FontSize="20"></Button>
            <Button Text="Cancelar" Clicked="OnCancelClicked" FontSize="20"></Button>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>